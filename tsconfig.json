{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "~modules/*": ["modules/*"],
      "~configs/*": ["configs/*"],
      "~shared/*": ["shared/*"],
      "~utils/*": ["utils/*"],
      "~services/*": ["services/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}